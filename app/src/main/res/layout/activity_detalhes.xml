<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70AECC"
    android:padding="16dp"
    tools:context=".DetalhesActivity">

    <TextView
        android:id="@+id/tvDetalhesTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhes do Clima"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tvDetalhesCidade"
        android:layout_width="126dp"
        android:layout_height="29dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="32dp"
        android:text="Cidade:"
        android:textColor="#282727"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetalhesTitulo" />

    <TextView
        android:id="@+id/tvDetalhesUmidade"
        android:layout_width="127dp"
        android:layout_height="30dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:text="Umidade:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetalheDescricao" />

    <TextView
        android:id="@+id/tvDetalhesPressao"
        android:layout_width="133dp"
        android:layout_height="29dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:text="Pressão:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetalhesUmidade" />

    <TextView
        android:id="@+id/tvDetalhesVento"
        android:layout_width="132dp"
        android:layout_height="28dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:text="Vento:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetalhesPressao" />

    <TextView
        android:id="@+id/tvDetalheTemperatura"
        android:layout_width="163dp"
        android:layout_height="30dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:text="Temperatura:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetalhesCidade" />

    <TextView
        android:id="@+id/tvDetalheDescricao"
        android:layout_width="127dp"
        android:layout_height="27dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:text="Descrição:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetalheTemperatura" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="289dp"
        android:layout_marginBottom="225dp"
        android:text="Voltar"
        android:textColorLink="#504040"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>